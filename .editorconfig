root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.js]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
